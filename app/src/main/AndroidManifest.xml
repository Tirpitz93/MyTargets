<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="de.dreier.mytargets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="com.android.vending.BILLING"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:backupAgent=".utils.MyBackupAgent"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:restoreAnyVersion="false"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:ignore="UnusedAttribute">

        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIy_jZMyyGuh5M-ICvUll4H1WyF1R9M8cUcN5wVw"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <service android:name="de.dreier.mytargets.utils.PresentationService" android:exported="false" />

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.CustomToolbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$TrainingActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.CustomToolbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$TimerActivity"
            android:label=""
            android:launchMode="singleTop"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".activities.InputActivity"
            android:theme="@style/AppTheme.CustomToolbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.InputActivity"/>
        </activity>
        <activity
            android:name=".activities.InputActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$TrainingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$TrainingActivity"/>
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$EditTrainingActivity"
            android:label="@string/new_round"
            android:parentActivityName=".activities.SimpleFragmentActivity$TrainingActivity"
            android:theme="@style/AppTheme.CustomToolbar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$TrainingActivity"/>
        </activity>
        <activity
            android:name=".activities.SimpleFragmentActivity$EditStandardRoundActivity"
            android:label="@string/new_round_template"
            android:parentActivityName=".activities.ItemSelectActivity$StandardRound"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ItemSelectActivity$StandardRound"/>
        </activity>
        <activity
            android:name=".activities.EditBowActivity"
            android:label="@string/add_bow"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.CustomToolbar"
            android:windowSoftInputMode="adjustPan|adjustNothing">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.EditArrowActivity"
            android:label="@string/add_arrow"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.CustomToolbar"
            android:windowSoftInputMode="adjustPan|adjustNothing">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.ScoreboardActivity"
            android:label="@string/scoreboard"
            android:parentActivityName=".activities.SimpleFragmentActivity$TrainingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$TrainingActivity"/>
        </activity>
        <activity
            android:name=".activities.StatisticsActivity"
            android:label="@string/statistic"/>
        <activity
            android:name=".activities.ItemSelectActivity$Arrow"
            android:label="@string/arrow"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditStandardRoundActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditStandardRoundActivity"/>
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$Bow"
            android:label="@string/bow"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditStandardRoundActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditStandardRoundActivity"/>
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$Environment"
            android:label="@string/environment"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditStandardRoundActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditStandardRoundActivity"/>
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$Target"
            android:label="@string/target_face"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.CustomToolbar"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditStandardRoundActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditStandardRoundActivity"/>
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$Distance"
            android:label="@string/distance"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditStandardRoundActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditStandardRoundActivity"/>
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$WindSpeed"
            android:label="@string/wind_speed"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.ItemSelectActivity$Environment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ItemSelectActivity$Environment"/>
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$WindDirection"
            android:label="@string/wind_direction"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.ItemSelectActivity$Environment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ItemSelectActivity$Environment"/>
        </activity>
        <activity
            android:name=".activities.ItemSelectActivity$StandardRound"
            android:label="@string/standard_rounds"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.SimpleFragmentActivity$EditTrainingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SimpleFragmentActivity$EditTrainingActivity"/>
        </activity>

        <!-- Preferences activity -->
        <activity
            android:name=".activities.SimpleFragmentActivity$SettingsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/preferences"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>
    </application>
</manifest>
